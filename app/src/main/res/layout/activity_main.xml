<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.androidlime.parcentangeapp.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView

                android:textColor="#FF0E0E0E"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                android:text="What is!"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColorHint="#FF09187E"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
            android:inputType="numberDecimal"
            android:hint="Present"
            android:textSize="30dp"
            android:id="@+id/present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <TextView
        android:layout_marginTop="12dp"
        android:textColor="#FF3E012D"
        android:textSize="40dp"
        android:text="OF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColorHint="@color/colorPrimary"
        android:hint="Total Class"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:inputType="numberDecimal"
        android:id="@+id/totalclass"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:background="@drawable/btnbackroud"
        android:id="@+id/calculate"
        android:textSize="27dp"
        android:layout_marginTop="10dp"
        android:text="Calculate"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="60dp" />


    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/result"
        android:layout_marginTop="0dp"
        android:textSize="35dp"
        android:text="Result:"
        android:textColor="#FF040473"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
